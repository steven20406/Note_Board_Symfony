{% extends 'NoteboardBundle::layout.html.twig' %}

{% block title %}About{% endblock %}

{% block h1 %}About{% endblock %}

{% block body %}
    {% block table %}
        <table id = "note_table" border = 1>
            <thead>
            <tr>
                <th>Note No.
                <th>User
                <th>Note
            </tr>
            </thead>
            <tr>
                <td>{{ noteData.getId() }}</td>
                <td>{{ noteData.getUsername() }}</td>
                <td>{{ noteData.getNote() }}</td>
            </tr>
        </table>

        <h2>Comments</h2>

        <table id = "comment_table" border = 1>
            <thead>
            <tr>
                <th>User
                <th>Reply Text
            </tr>
            </thead>
            {% for comment in commentData %}
                <tr>
                    <td>{{ comment.getCommentUsername() }}</td>
                    <td>{{ comment.getCommentNotetext() }}</td>
                </tr>
            {% endfor %}
        </table>
    {% endblock %}

    <h3>Comments here</h3>

    {{ form_start(form) }}
        <form action = "{{ path('noteboard_about', {'page' : noteData.getId()} ) }}" , method = "post">
            {{ form_errors(form) }}
            {{ form_widget(form) }}
            {{ form_rest(form) }}
        </form>
    {{ form_end(form) }}

{% endblock %}